<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_music_player_LayoutBgId"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#878787"
    tools:context="com.example.day38_musicplayerhomework.ui.MusicPlayerActivity">

    <LinearLayout
        android:id="@+id/activity_music_player_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D20000"
        android:gravity="center"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:id="@+id/activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/activity_music_player_pictureBGId"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/placeholder_disk_play_program"
        android:layout_centerInParent="true"
        />
    <ImageView
        android:id="@+id/activity_music_player_imgId"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        />
    <LinearLayout
        android:id="@+id/activity_music_player_playerControlllId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/activity_music_player_previousId"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/desk_pre"/>
        <ImageView
            android:id="@+id/activity_music_player_playerControlId"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/desk_play"/>

        <ImageView
            android:id="@+id/activity_music_player_nextId"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/desk_next"/>

    </LinearLayout>
    <LinearLayout
        android:layout_above="@+id/activity_music_player_playerControlllId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/activity_music_player_progressLinearLayoutId"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/activity_music_player_timeId"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:gravity="center_vertical"
            android:text="00:00"
            />
        <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/activity_music_player_seekBarId"
            />
        <TextView
            android:id="@+id/activity_music_player_timeCountId"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_margin="5dp"
            android:text="00:00"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/activity_music_player_orderId"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/play_icn_loop"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"/>

</RelativeLayout>
