<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D20000">

    <SeekBar
        android:id="@+id/window_music_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/window_music_player_playerControlllId"
        android:layout_below="@id/window_music_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <!--<ImageView
            android:id="@+id/window_music_player_previousId"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/desk_pre"/>
        <ImageView
            android:id="@+id/window_music_player_playerControlId"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/desk_play"/>-->

        <ImageView
            android:id="@+id/window_music_player_nextId"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/desk_next"/>
    </LinearLayout>
    <TextView
        android:id="@+id/window_music_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_below="@id/window_music_seekbar"
        android:layout_toLeftOf="@id/window_music_player_playerControlllId"/>



</RelativeLayout>
